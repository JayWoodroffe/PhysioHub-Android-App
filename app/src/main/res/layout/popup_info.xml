<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:id="@+id/background"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:id="@+id/tvAge"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:textSize="14sp"
            android:layout_alignTop="@id/tvAge"
            android:layout_toRightOf="@id/tvAge"
            android:layout_marginStart="120dp"
            android:id="@+id/tvAgeData"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of birth:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_below="@id/tvAge"
            android:layout_marginTop="8dp"
            android:layout_alignStart="@id/tvAge"
            android:id="@+id/tvDob"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/03/2000"
            android:textSize="14sp"
            android:layout_below="@id/tvAge"
            android:layout_toRightOf="@id/tvAge"
            android:layout_marginTop="8dp"
            android:layout_alignStart="@id/tvAgeData"
            android:id="@+id/tvDobData"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cell number:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_below="@id/tvDob"
            android:layout_marginTop="8dp"
            android:layout_alignStart="@id/tvAge"
            android:id="@+id/tvNumber"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000 000 00000"
            android:textSize="14sp"
            android:layout_below="@id/tvDob"
            android:layout_toRightOf="@id/tvAge"
            android:layout_marginTop="8dp"
            android:layout_alignStart="@id/tvAgeData"
            android:id="@+id/tvNumberData"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_below="@id/tvNumber"
            android:layout_marginTop="8dp"
            android:layout_alignStart="@id/tvAge"
            android:id="@+id/tvEmail"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jjj@gmsil.com"
            android:textSize="14sp"
            android:layout_below="@id/tvNumber"
            android:layout_toRightOf="@id/tvAge"
            android:layout_marginTop="8dp"
            android:layout_alignStart="@id/tvAgeData"
            android:id="@+id/tvEmailData"/>
    </RelativeLayout>
